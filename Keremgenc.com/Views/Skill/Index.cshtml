@model List<Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayaout.cshtml";
    int count = 0;
}

<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeteneklerim Sayfası</h4>
            <p class="card-description">
               Merhaba, <code>bu Sayafa da yeteneklerinizi değiştireblir,güncelleyebilir veya sile bilirsniz.</code>
            </p>
            <table class="table table-bordered">

                <thead>
                    <tr>
                        <th> # </th>
                        <th> Yetenek Adı </th>
                        <th> Açıklama </th>
                        <th> Logosu </th>
                        <th> Güncelle </th>
                        <th> sil </th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    count++;

                <tbody>
                    <tr >
                        <td> @count </td>
                        <td> @item.title </td>
                            <td> @item.Description.Substring(0, Math.Min(10, item.Description.Length))  </td>
                        <td> @item.skill1 </td>
                            <td> <a href="/Skill/EditSkill/@item.skillid" class="btn btn-inverse-success btn-fw">Güncelle</a> </td>
                            <td> <a href="/Skill/DeleteSkill/@item.skillid" class="btn btn-inverse-danger btn-fw">Sil</a> </td>
                    </tr>
                
                </tbody>
                }
            </table>
                <br />
            <a href="/Skill/AddSkill/" class=" btn btn-gradient-dark btn-rounded btn-fw ">Yeni Yetenek Ekle</a>

        </div>
    </div>
</div>

