@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayaout.cshtml";
 
}


<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hakkımda Sayfası</h4>
            <p class="card-description">
                Merhaba, <code>bu Sayafa da Hakkımda sayafasındaki yazıları ve Fotoğrafları değiştireblir,güncelleyebilirbilirsniz.</code>
            </p>
            <table class="table table-bordered">

                <thead>
                    <tr>
                        <th> Resim </th>
                        <th>  Başlık </th>
                        <th> Açıklama </th>

                        <th> Düzenle </th>

                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    

                    <tbody>
                        <tr>
                            <td>
                                <img src="@item.ImageUrl" alt="Fotoğraf" style="width: 75px; height: 75px;" />
                            </td>

                          
                            <td> @item.title1 </td>
                            <td> @item.Description.Substring(0, Math.Min(30, item.Description.Length))  </td>

                            <td> <a href="/About/UpdateAbout/@item.Aboutid" class="btn btn-inverse-primary btn-fw">Düzenle</a> </td>

                        </tr>

                    </tbody>
                }
            </table>
            <br />


        </div>
    </div>
</div>





