@model List<Projects>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayaout.cshtml";
}

<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Projelerim Sayfası</h4>
            <p class="card-description">
                Merhaba, <code>bu Sayafa da Projelerim sayafasındaki yazıları ve Fotoğrafları değiştireblir,güncelleyebilirsiniz.</code>
            </p>
            <table class="table table-bordered">

                <thead>
                    <tr>
                        <th> Resim </th>
                        <th>  Başlık </th>
                        <th> Açıklama </th>
                        <th> Düzenle </th>
                        <th> Sil </th>

                    </tr>
                </thead>
                @foreach (var item in Model)
                {


                    <tbody>
                        <tr>
                            <td>
                                <img src="@item.Imge" alt="Fotoğraf" style="width: 75px; height: 75px;" />
                            </td>


                            <td> @item.Title </td>
                            <td> @item.description.Substring(0, Math.Min(30, item.description.Length))  </td>

                            <td> <a href="/Portfolio/UpdatePortfolio/@item.Projectid" class="btn btn-inverse-primary btn-fw">Düzenle</a> </td>
                            <td> <a href="/Portfolio/DeletePortfolio/@item.Projectid" class="btn btn-inverse-danger btn-fw">Sil</a> </td>

                        </tr>

                    </tbody>
                }
            </table>
            <br />
            <a href="/Portfolio/AddPortfolio/" class=" btn btn-gradient-dark btn-rounded btn-fw ">Yeni Proje Ekle</a>


        </div>
    </div>
</div>


