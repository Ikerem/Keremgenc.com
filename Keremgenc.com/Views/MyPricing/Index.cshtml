@model List<MyPricing>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayaout.cshtml";
    int count = 0;
}


<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Paketlerim Sayfası</h4>
            <p class="card-description">
                Merhaba, <code>bu Sayafa da Fiyatlandırma değiştireblir,güncelleyebilir veya sile bilirsniz.</code>
            </p>
            <table class="table table-bordered">

                <thead>
                    <tr>
                        <th> # </th>
                        <th> Resim </th>
                        <th> Paket Adı </th>
                        <th> Açıklama </th>
                        <th> Fiyat</th>
                    
                       
                        <th> Güncelle </th>
                        <th> sil </th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    count++;

                    <tbody>
                        <tr>
                            <td> @count </td>
                            <td> @item.ımg </td>
                            <td> @item.title </td>
                            <td> @item.description </td>
                         
                       
                            <td> @item.price </td>
                           
                            <td> <a href="/MyPricing/EditPricing/@item.MyPricingid" class="btn btn-inverse-success btn-fw">Güncelle</a> </td>
                            <td> <a href="/MyPricing/DeletePricing/@item.MyPricingid" class="btn btn-inverse-danger btn-fw">Sil</a> </td>
                        </tr>

                    </tbody>
                }
            </table>
            <br />
            <a href="/MyPricing/AddSkill/" class=" btn btn-gradient-dark btn-rounded btn-fw ">Yeni Yetenek Ekle</a>

        </div>
    </div>
</div>



